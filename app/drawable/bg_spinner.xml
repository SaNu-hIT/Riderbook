<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90"
                android:endColor="#e45f5f"
                android:startColor="#bc4d4d"
                android:type="linear" />

            <stroke android:width="1dp"
                android:color="#E4E4E4" />

            <corners android:radius="5dp" />

            <padding android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape></item>
        <item ><bitmap android:gravity="center|right" android:src="@drawable/drop_dwn_ic" />
        </item>
    </layer-list></item>

</selector>